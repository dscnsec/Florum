{
    "name": "extiverse/bazaar",
    "description": "The Flarum extension marketplace.",
    "keywords": [
        "extension", "extend", "extensions",
        "flarum", "extiverse",
        "marketplace",
        "premium", "paid"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "http://luceos.com"
        },
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com"
        }
    ],
    "support": {
        "issues": "https://github.com/extiverse/bazaar/issues",
        "source": "https://github.com/extiverse/bazaar"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.9",
        "composer/composer": "^1.3",
        "guzzlehttp/guzzle": "^6.2",
        "fof/console": "^0.5"
    },
    "require-dev": {
        "flagrow/steamroller": "dev-master"
    },
    "extra": {
        "flarum-extension": {
            "title": "Bazaar",
            "icon": {
                "image": "resources/logo.svg",
                "backgroundColor": "#5f4bb6",
                "backgroundSize": "90%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/5151"
        }
    },
    "replace": {
        "flagrow/bazaar": "*"
    },
    "autoload": {
        "psr-4": {
            "Extiverse\\Bazaar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extiverse\\Bazaar\\Tests\\": "tests/"
        }
    }
}
