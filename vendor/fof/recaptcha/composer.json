  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.8",
    "google/recaptcha": "^1.2"
  },
  "authors": [
    {
      "name": "Sajjad Hashemian",
      "email": "wolaws@gmail.com"
    },
    {
      "name": "David Sevilla Mart√≠n",
      "email": "david.s@redevs.org",
      "role": "Developer"
    }
  ],
  "replace": {
    "sijad/flarum-ext-recaptcha": "*"
  },
  "autoload": {
    "psr-4": {
      "FoF\\ReCaptcha\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "FoF reCAPTCHA",
      "icon": {
        "name": "fas fa-robot",
        "backgroundColor": "#e74c3c",
        "color": "#fff"
      }
    },
    "flagrow": {
