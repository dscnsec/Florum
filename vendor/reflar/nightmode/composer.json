{
    "name": "reflar/nightmode",
    "description": "Turn your flarum forum to dark as user",
    "keywords": [
        "extension",
        "flarum",
        "moon",
        "mode",
        "night",
        "reflar"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Shahiem Seymor",
            "email": "shahiem.seymor@reflar.email",
            "homepage": "https://reflar.io"
        },
      {
        "name": "Christian Lopez",
        "email": "Christian.L@redevs.org",
        "homepage": "https://reflar.redevs.org"
      }
    ],
    "support": {
        "issues": "https://github.com/ReFlar/nightmode/issues",
        "source": "https://github.com/ReFlar/nightmode"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.8"
    },
    "extra": {
        "flarum-extension": {
            "title": "ReFlar Night Mode",
            "icon": {
                "name": "far fa-moon",
                "backgroundColor": "#263238",
                "color": "#fff"
